{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Install npm dependencies",
			"type": "shell",
			"command": "npm install",
			"isBackground": false,
			"problemMatcher": [
				"$eslint-stylish"
			],
			"group": "build"
		},
		{
			"label": "Install Playwright browsers",
			"type": "shell",
			"command": "npx playwright install",
			"isBackground": false,
			"group": "build"
		},
		{
			"label": "Run scraper smoke test",
			"type": "shell",
			"command": "node src/main.js",
			"isBackground": false,
			"group": "build"
		},
		{
			"label": "Reinstall dotenv and run scraper",
			"type": "shell",
			"command": "npm install; node src/main.js",
			"isBackground": false,
			"group": "build"
		},
		{
			"label": "Run updated scraper (no browsers installed again)",
			"type": "shell",
			"command": "node src/main.js",
			"isBackground": false,
			"group": "build"
		},
		{
			"label": "Run via npm start from project root",
			"type": "shell",
			"command": "npm run start",
			"isBackground": false,
			"group": "build"
		},
		{
			"label": "Install Nopecha peer deps (already present) and run",
			"type": "shell",
			"command": "npm install; npm run start",
			"isBackground": false,
			"group": "build"
		}
	]
}